{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VITEST_ROOT_DIR"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"]
    },
    "api#build": {
      "dependsOn": ["^build"],
      "env": [
        "APP_HOST",
        "APP_PORT",
        "DATA_PATH"
      ]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_API_BASE_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
